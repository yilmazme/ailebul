<div class="navbar">
    <a href="/people" class="btn btn-info btn-sm">Hepsini Gör</a>
    <a href="/" class="btn btn-info btn-sm">Ana Sayfa</a>
    <a href="/people/logout" class="btn btn-dark btn-sm">Çıkış</a>
</div>
<h3 class="mt-3">Hoşgeldin {{name}}</h3>
{{#if error_msg}}
<p style="color: red;">{{error_msg}}</p>
{{/if}}
<div class="form">
    <form class="mb-4">
        <div class="form-group">
            <label for="aname">İsim:</label>
            <input type="text" name="aname" class="form-control" placeholder="{{animal.name}}" readonly>
        </div>
        <div class="form-group">
            <label for="age">Yaş:</label>
            <input type="text" name="age" class="form-control" placeholder="{{animal.age}}" readonly>
        </div>
        <div class="form-group">
            <label for="description">Hakkında:</label>
            <input type="text" name="description" class="form-control" placeholder="{{animal.description}}" readonly>
        </div>
        <hr>
        <div class="form-group">
            <label for="name">İsim:</label>
            <input type="text" name="name" class="form-control" placeholder="{{name}}" readonly>
        </div>
        <div class="form-group">
            <label for="username">Kullanıcı İsmi:</label>
            <input type="text" name="username" class="form-control" placeholder="{{username}}" readonly>
        </div>
        <div class="form-group">
            <label for="phone">Telefon:</label>
            <input type="text" name="phone" class="form-control" placeholder="{{phone}}" readonly>
        </div>
        <div class="form-group">
            <label for="region">Bölgeniz:</label>
            <input type="text" name="region" class="form-control" placeholder="{{region}}" readonly>
        </div>
    </form>

    <img class="img-thumbnail" src="../{{animal.animalImage}}" alt="cat">

</div>
<form action="/people/registered/{{id}}?_method=DELETE" method="POST">
    <div class="form-group">
        <button type="submit" class="btn btn-danger btn-sm">Hesabımı Sil</button>
    </div>
</form>

{{>footer}}
