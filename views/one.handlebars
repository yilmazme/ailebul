<div class="navbar navbar-light bg-light fixed-top">
    <a href="/" class="btn btn-info btn-sm">Ana Sayfa</a>
    <a href="/people" class="btn btn-info btn-sm">Hepsini Gör</a>
    <a href="/people/logout" class="btn btn-dark btn-sm">Çıkış</a>
</div>

<div class="form form  p-5">
    <form class="mb-4">
        <h3 class="mt-5">Hoşgeldin {{name}}</h3>
        {{#if error_msg}}
        <p style="color: red;">{{error_msg}}</p>
        {{/if}}
        <div class="row">
            <label class="col-sm-2 col-form-label" for="aname">İsim:</label>
            <div class="col-sm-10">
                <input type="text" name="aname" class="form-control" placeholder="{{animal.name}}" readonly>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label" for="age">Yaş:</label>
            <div class="col-sm-10">
                <input type="text" name="age" class="form-control" placeholder="{{animal.age}}" readonly>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label" for="description">Hakkında:</label>
            <div class="col-sm-10">
                <input type="text" name="description" class="form-control" placeholder="{{animal.description}}"
                    readonly>
            </div>
        </div>

        <hr>
        <div class="row">
            <label class="col-sm-2 col-form-label" for="name">İsim:</label>
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control" placeholder="{{name}}" readonly>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label" for="username">Kullanıcı İsmi:</label>
            <div class="col-sm-10">
                <input type="text" name="username" class="form-control" placeholder="{{username}}" readonly>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label" for="phone">Telefon:</label>
            <div class="col-sm-10">
                <input type="text" name="phone" class="form-control" placeholder="{{phone}}" readonly>
            </div>
        </div>

        <div class="row">
            <label class="col-sm-2 col-form-label" for="region">Bölgeniz:</label>
            <div class="col-sm-10">
                <input type="text" name="region" class="form-control" placeholder="{{region}}" readonly>
            </div>
        </div>

        <form class="mx-5" action="/people/registered/{{id}}?_method=DELETE" method="POST" id="deleteForm">
            <button id="mybtn" class="btn btn-danger btn-sm mt-0">Hesabımı Sil!</button>
        </form>
    </form>
    <div class="imgDiv">
        <img src="../{{animal.animalImage}}" alt="cat">
    </div>
</div>
{{>footer}}
<script>
    const btn = document.querySelector("#mybtn")
    btn.addEventListener("click", (e) => {
        e.preventDefault();
        let flag = confirm("Are you sure?")
        if (flag) {
            document.getElementById("deleteForm").submit();
        }
        else {
            alert("not deleted")
        }
    })
</script>
