<div class="navbar navbar-light bg-light fixed-top">

    <a href="/" class="btn btn-info btn-sm">Ana Sayfa</a>
    <a href="/people" class="btn btn-info btn-sm">Hepsini Gör</a>
    {{#unless logged}}
    <a href="/people/login" class="btn btn-success btn-sm">Giriş</a>
    <a href="/people/new" class="btn btn-success btn-sm">Kayıt</a>
    {{/unless}}
    {{#if logged}}
    <a href="/people/registered" class="btn btn-warning btn-sm">Sayfam</a>
    <a href="/people/logout" class="btn btn-danger btn-sm">Çıkış</a>
    {{/if}}
</div>
<div class="form mt-2 p-5">
    <form class="mb-4">
        <h4 class="text-center mb-3 text-white">{{people.animal.name}}-{{people.animal.age}}</h4>
        <div class="row">
            <label class="col-sm-2 col-form-label" for="aname">İsim:</label>
            <div class="col-sm-10">
                <input type="text" name="aname" readonly class="form-control" placeholder="{{people.animal.name}}">
            </div>
        </div>
        <div class="row">

            <label class="col-sm-2 col-form-label" for="age">Yaş:</label>
            <div class="col-sm-10">
                <input type="text" name="age" readonly class="form-control" placeholder="{{people.animal.age}}">
            </div>
        </div>
        <div class="row">

            <label class="col-sm-2 col-form-label" for="description">Hakkında:</label>
            <div class="col-sm-10">
                <input type="text" name="description" readonly class="form-control"
                    placeholder="{{people.animal.description}}">
            </div>
        </div>
        <hr>
        <div class="row">

            <label class="col-sm-2 col-form-label" for="name">Sahibi:</label>
            <div class="col-sm-10">
                <input type="text" name="name" readonly class="form-control" placeholder="{{people.name}}">
            </div>
        </div>
        <div class="row">

            <label class="col-sm-2 col-form-label" for="phone">Telefon:</label>
            <div class="col-sm-10">
                <input type="text" name="phone" readonly class="form-control" placeholder="{{people.phone}}">
            </div>
        </div>
        <div class="row">

            <label class="col-sm-2 col-form-label" for="phone">Bölge:</label>
            <div class="col-sm-10">
                <input type="text" name="phone" readonly class="form-control" placeholder="{{people.region}}">
            </div>
        </div>


    </form>
    <div class="imgDiv">

        <img  src="../{{people.animal.animalImage}}" alt="cutie">
    </div>

</div>

{{>footer}}
