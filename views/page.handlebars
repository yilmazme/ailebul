<div class="navbar">
    <h1 class="text-center mb-3">{{people.animal.name}}-{{people.animal.age}}</h1>
    <a href="/people" class="btn btn-info btn-sm">Hepsini Gör</a>
    <a href="/" class="btn btn-info btn-sm">Ana Sayfa</a>
    <a href="/people/login" class="btn btn-success btn-sm">Giriş</a>
</div>
<div class="form">
    <form class="mb-4">
        <div class="form-group">
            <label for="aname">İsim:</label>
            <input type="text" name="aname" readonly class="form-control" placeholder="{{people.animal.name}}">
        </div>
        <div class="form-group">
            <label for="age">Yaş:</label>
            <input type="text" name="age" readonly class="form-control" placeholder="{{people.animal.age}}">
        </div>
        <div class="form-group">
            <label for="description">Hakkında:</label>
            <input type="text" name="description" readonly class="form-control"
                placeholder="{{people.animal.description}}">
        </div>
        <hr>
        <div class="form-group">
            <label for="name">Sahibi:</label>
            <input type="text" name="name" readonly class="form-control" placeholder="{{people.name}}">
        </div>
        <div class="form-group">
            <label for="phone">Telefon:</label>
            <input type="text" name="phone" readonly class="form-control" placeholder="{{people.phone}}">
        </div>
        <div class="form-group">
            <label for="phone">Bölge:</label>
            <input type="text" name="phone" readonly class="form-control" placeholder="{{people.region}}">
        </div>


    </form>

    <img class="img-thumbnail" src="../{{people.animal.animalImage}}" alt="cutie">


</div>

{{>footer}}
