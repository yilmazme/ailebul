<div class="container-max index">
    <div class="navbar navbar-light bg-light fixed-top">
        <a href="/" class="btn btn-info btn-sm">Anasayfa</a>
        {{#unless logged}}
        <a href="/people/new" class="btn btn-success btn-sm ">Kayıt</a>
        <a href="/people/login" class="btn btn-success btn-sm">Giriş</a>
        {{/unless}}
        {{#if logged}}
         <a href="/people/registered" class="btn btn-warning btn-sm">Sayfam</a>
        <a href="/people/logout" class="btn btn-danger btn-sm">Çıkış</a>
        {{/if}}
    </div>
    <h3 class="ml-3"></h3>
    {{#if success_msg}}
    <strong style="color: green;">{{success_msg}}</strong>
    {{/if}}
    {{#if error}}
    <strong style="color: red;">{{error}}</strong>
    {{/if}}
    {{#if error_msg}}
    <strong style="color: red;">{{error_msg}}</strong>
    {{/if}}
    <div class="container animals p-5">
        {{#each people}}
        <div class="card bg-success mb-2 text-center" style="width: 16rem;">
            <a href="/people/{{this._id}}"><img src="{{this.animal.animalImage}}" class="card-img-top" alt="cuties"></a>
            <a href="/people/{{this._id}}">
                <div class="card-body mt-0">
                    <h5 class="card-title">İsim: {{this.animal.name}}</h5>
                    <h5 class="card-title">Yaş: {{this.animal.age}}</h5>
                    <p class="card-text">
                        {{this.animal.description}}
                    </p>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
</div>


{{>footer}}
