    {{/if}}
    {{#if error_msg}}
    <strong style="color: red;">{{error_msg}}</strong>
    {{/if}}
    <div class="container animals mt-3">
        {{#each people}}
        <div class="card bg-success mb-2 text-center" style="width: 16rem;">
            <a href="/people/{{this._id}}"><img src="{{this.animal.animalImage}}" class="card-img-top" alt="cuties"></a>
