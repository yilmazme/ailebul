                <div class="card-body mt-0">
                    <h5 class="card-title">İsim: {{this.animal.name}}</h5>
                    <h5 class="card-title">Yaş: {{this.animal.age}}</h5>
                    <p class="card-text">
                        {{this.animal.description}}
                    </p>
                    {{!-- <h6 class="card-subtitle mb-2">
                        Owner:{{this.name}}
                        Phone:{{this.phone}}
                    </h6> --}}
                </div>
            </a>

