<div class="navbar navbar-light bg-light fixed-top">
    <a href="/" class="btn btn-info btn-sm">Ana Sayfa</a>
    <a href="/people" class="btn btn-info btn-sm">Hepsini Gör</a>
    <a href="/people/login" class="btn btn-success btn-sm">Giriş</a>
</div>

<div class="form mt-2 p-5">
    <form action="/people/new" method="POST" enctype="multipart/form-data" class="mb-4">
        {{#if errorMsg}}
        <p style="color: rgb(189, 39, 39);">{{errorMsg}}</p>
        {{/if}}

        {{#if error_msg}}
        <p style="color: rgb(151, 17, 17);">{{error_msg}}</p>
        {{/if}}
        <div class="row">
            <label class="col-sm-4 col-form-label" for="aname">Dostumuzun İsmi:</label>
            <div class="col-sm-8">
                <input type="text" name="aname" required class="form-control form-control-sm" value={{aname}}>
            </div>
        </div>
        <div class=" row">
            <label class="col-sm-4 col-form-label" for="age">Yaşı:</label>
            <div class="col-sm-8">
                <input type="text" name="age" class="form-control form-control-sm" value={{age}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="description">Hakkında:</label>
            <div class="col-sm-8">
                <input type="text" name="description" class="form-control form-control-sm" value={{description}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="animalImage">Foto:</label>
            <div class="col-sm-8">
                <input type="file" name="animalImage" id="image" required>
            </div>
        </div>
        <hr>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="name">İsminiz:</label>
            <div class="col-sm-8">
                <input type="text" name="name" class="form-control form-control-sm" value={{name}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="phone">Telefon:</label>
            <div class="col-sm-8">
                <input type="text" name="phone" class="form-control form-control-sm"
                    value={{phone}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="region">Semt:</label>
            <div class="col-sm-8">
                <input type="text" name="region" class="form-control form-control-sm" value={{region}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="username">K.İsmi:</label>
            <div class="col-sm-8">
                <input type="text" name="username" class="form-control form-control-sm" value={{username}}>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-4 col-form-label" for="password">Şifre:</label>
            <div class="col-sm-8">
                <input type="password" id="password" name="password" class="form-control form-control-sm">
            </div>
        </div>
       
        <div class="row">
            <label class="col-sm-4 col-form-label" for="tekrar">Şifre Tekrar:</label>
            <div class="col-sm-8">
                <input type="password" id="tekrar" name="tekrar" class="form-control form-control-sm">
                Şifreleri Gör <input type="checkbox" name="seepass" id="seepass">
            </div>
            
        </div>
          
        <input type="submit" value="Kayıt" class="btn btn-success btn-sm mt-3">
    </form>

    <div class="imgDiv">
        <img id="yourPat" src="../animals/catwhy.jpg" alt="yourPat">
    </div>


</div>
{{>footer}}
<script>
    const yourPat = document.getElementById("yourPat");
    const imgInp = document.getElementById("image");
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            yourPat.src = URL.createObjectURL(file)
        } else {
            yourPat.src = "../animals/catwhy.jpg"
        }
    }
    const checkBox = document.querySelector("#seepass");
    checkBox.addEventListener("click", ()=>{
         let password = document.querySelector("#password");
          let tekrar = document.querySelector("#tekrar");
          if(password.type === "password"){
              password.type = "text"
              tekrar.type = "text"
          }
          else{
               password.type = "password"
              tekrar.type = "password"
          }
    })
</script>
